{
  "name": "langplug-unified-tests",
  "version": "1.0.0",
  "description": "Unified test orchestration for LangPlug application",
  "main": "index.js",
  "scripts": {
    "test": "ts-node run-tests.ts",
    "test:all": "ts-node run-tests.ts --suite=all",
    "test:unit": "ts-node run-tests.ts --suite=unit",
    "test:integration": "ts-node run-tests.ts --suite=integration",
    "test:e2e": "ts-node run-tests.ts --suite=e2e",
    "test:contract": "ts-node run-tests.ts --suite=contract",
    "test:watch": "ts-node run-tests.ts --watch",
    "test:ci": "ts-node run-tests.ts --bail --coverage --report",
    "test:backend": "cd ../Backend && python -m pytest --tb=short",
    "test:frontend": "cd ../Frontend && npm run test",
    "test:old": "npx ts-node scripts/run-all-tests.ts",
    "playwright:install": "playwright install",
    "playwright:test": "cd e2e && playwright test",
    "playwright:test:ui": "cd e2e && playwright test --ui",
    "playwright:test:debug": "cd e2e && playwright test --debug",
    "playwright:report": "cd e2e && playwright show-report",
    "playwright:smoke": "cd e2e && E2E_SMOKE_TESTS=1 playwright test --config=playwright-smoke.config.ts",
    "playwright:smoke:ui": "cd e2e && E2E_SMOKE_TESTS=1 playwright test --config=playwright-smoke.config.ts --ui"
  },
  "dependencies": {
    "@faker-js/faker": "^8.3.1",
    "@playwright/test": "^1.55.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.12.2",
    "chalk": "^4.1.2",
    "chokidar": "^4.0.3",
    "fs-extra": "^11.2.0",
    "openapi-types": "^12.1.3",
    "puppeteer": "^24.22.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "uuid": "^9.0.1",
    "node-fetch": "^2.6.9"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@types/node-fetch": "^2.6.4",
    "@types/uuid": "^9.0.7"
  }
}
