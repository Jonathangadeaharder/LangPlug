{
  "name": "langplug-unified-tests",
  "version": "1.0.0",
  "description": "Unified test orchestration for LangPlug application",
 "main": "index.js",
  "scripts": {
    "test": "ts-node run-tests.ts",
    "test:all": "ts-node run-tests.ts --suite=all",
    "test:unit": "ts-node run-tests.ts --suite=unit",
    "test:integration": "ts-node run-tests.ts --suite=integration",
    "test:e2e": "ts-node run-tests.ts --suite=e2e",
    "test:contract": "ts-node run-tests.ts --suite=contract",
    "test:watch": "ts-node run-tests.ts --watch",
    "test:ci": "ts-node run-tests.ts --bail --coverage --report",
    "test:backend": "cd ../Backend && python -m pytest --tb=short",
    "test:frontend": "cd ../Frontend && npm run test",
    "test:old": "npx ts-node scripts/run-all-tests.ts"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "puppeteer": "^24.22.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "@faker-js/faker": "^8.3.1",
    "chalk": "^4.1.2",
    "fs-extra": "^11.2.0",
    "uuid": "^9.0.1",
    "openapi-types": "^12.1.3",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/uuid": "^9.0.7"
  }
}
