# Unified Processor Environment Variables
# Copy this file to .env and update with your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-secret-api-key-here

# Service Configuration
DEFAULT_TRANSCRIPTION_SERVICE=whisper
DEFAULT_TRANSLATION_SERVICE=marian
DEFAULT_PROFILE=balanced

# Model Configuration
WHISPER_MODEL_SIZE=turbo
WHISPER_DEVICE=auto
CANARY_MODEL_PATH=nvidia/canary-1b
PARAKEET_MODEL_PATH=nvidia/parakeet-tdt-0.6b

# Cache Configuration
CACHE_ENABLED=true
CACHE_DIRECTORY=~/.cache/unified_processor
CACHE_MAX_SIZE_MB=1024
CACHE_TTL_SECONDS=604800

# Processing Configuration
PARALLEL_WORKERS=4
BATCH_SIZE=10
PROCESSING_TIMEOUT=3600

# Database Configuration (optional)
DATABASE_ENABLED=false
DATABASE_URL=sqlite:///data/unified_processor.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/unified_processor.log

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8081

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
USE_GPU=true

# Hugging Face Configuration (optional)
HF_TOKEN=your-huggingface-token-here
HF_CACHE_DIR=~/.cache/huggingface

# Google Drive Configuration (optional)
GOOGLE_DRIVE_ENABLED=false
GOOGLE_DRIVE_FOLDER_ID=your-folder-id-here