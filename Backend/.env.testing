# Testing Environment Configuration for LangPlug E2E Tests
# Using SQLite for simplified testing without PostgreSQL

# Database Configuration
LANGPLUG_DB_TYPE=sqlite
TESTING=1

# Server Configuration
LANGPLUG_HOST=127.0.0.1
LANGPLUG_PORT=8000
LANGPLUG_DEBUG=false
LANGPLUG_RELOAD=false

# Security Settings
LANGPLUG_SESSION_TIMEOUT_HOURS=24

# Logging Configuration
LANGPLUG_LOG_LEVEL=INFO
LANGPLUG_LOG_FORMAT=text

# File Paths
LANGPLUG_VIDEOS_PATH=./videos
LANGPLUG_DATA_PATH=./data
LANGPLUG_LOGS_PATH=./logs

# CORS Settings (adjust for your frontend URLs)
LANGPLUG_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://127.0.0.1:3000","http://127.0.0.1:3001"]

# Service Configuration
LANGPLUG_TRANSCRIPTION_SERVICE=whisper
LANGPLUG_TRANSLATION_SERVICE=nllb
LANGPLUG_DEFAULT_LANGUAGE=de

# Performance Settings
LANGPLUG_MAX_UPLOAD_SIZE=104857600
LANGPLUG_TASK_CLEANUP_INTERVAL=3600