[run]
# Professional coverage configuration - only exclude non-source code
omit =
    # Virtual environments and tooling
    api_venv/*
    venv/*
    .venv/*
    # Test and temporary files
    tests/*
    **/test_*.py
    # Generated and config files
    alembic/versions/*
    setup.py
    # External dependencies
    site-packages/*

[report]
# Require high coverage for production code
fail_under = 80
show_missing = true
skip_covered = false

[html]
directory = htmlcov
title = LangPlug Backend Coverage Report
