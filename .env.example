# LangPlug Environment Configuration
# Copy this file to .env and update with your values

################################################################################
# Environment Configuration
################################################################################

ENVIRONMENT=development
DEBUG=true

################################################################################
# API Configuration
################################################################################

# Backend API Server
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-secret-api-key-here
SECRET_KEY=your-secret-key-here

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_STAGING_API_URL=https://staging-api.langplug.com
VITE_API_BASE_URL=http://localhost:8000

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

################################################################################
# Service Configuration
################################################################################

# Default processing services
DEFAULT_TRANSCRIPTION_SERVICE=whisper
DEFAULT_TRANSLATION_SERVICE=marian
DEFAULT_PROFILE=balanced

# Model Configuration
WHISPER_MODEL_SIZE=turbo
WHISPER_DEVICE=auto
CANARY_MODEL_PATH=nvidia/canary-1b
PARAKEET_MODEL_PATH=nvidia/parakeet-tdt-0.6b
NLLB_MODEL_PATH=facebook/nllb-200-distilled-600M

################################################################################
# Database Configuration
################################################################################

# Database connection (SQLite by default, PostgreSQL support available)
DATABASE_URL=sqlite:///data/vocabulary.db
DATABASE_ENABLED=true

# PostgreSQL for production (uncomment and configure if using PostgreSQL)
# DATABASE_URL=postgresql://langplug:langplug@db:5432/langplug
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=langplug
# POSTGRES_USER=langplug_user
# POSTGRES_PASSWORD=your_secure_password
# POSTGRES_POOL_SIZE=5
# POSTGRES_MAX_OVERFLOW=10

# Redis Configuration (for production caching)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=true

################################################################################
# Cache Configuration
################################################################################

CACHE_ENABLED=true
CACHE_DIRECTORY=~/.cache/langplug
CACHE_MAX_SIZE_MB=1024
CACHE_TTL_SECONDS=604800

################################################################################
# Processing Configuration
################################################################################

PARALLEL_WORKERS=4
BATCH_SIZE=10
PROCESSING_TIMEOUT=3600

################################################################################
# Authentication & Security
################################################################################

# Frontend auth tokens
VITE_AUTH_TOKEN_KEY=langplug_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=langplug_refresh_token

# Session configuration
SESSION_TIMEOUT_HOURS=24

################################################################################
# Application Settings
################################################################################

# Application metadata
VITE_APP_NAME=LangPlug
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_CONTRACT_VALIDATION=true
VITE_ENABLE_API_LOGGING=true
VITE_ENABLE_DEBUG_MODE=true
VITE_DEV_MODE=true

################################################################################
# Logging Configuration
################################################################################

LOG_LEVEL=INFO
LOG_FILE=logs/langplug-backend.log

################################################################################
# CORS Configuration
################################################################################

CORS_ORIGINS=http://localhost:3000,http://localhost:8081

################################################################################
# GPU Configuration
################################################################################

CUDA_VISIBLE_DEVICES=0
USE_GPU=true

################################################################################
# Hugging Face Configuration (optional)
################################################################################

HF_TOKEN=your-huggingface-token-here
HF_CACHE_DIR=~/.cache/huggingface

################################################################################
# Google Drive Configuration (optional)
################################################################################

GOOGLE_DRIVE_ENABLED=false
GOOGLE_DRIVE_FOLDER_ID=your-folder-id-here

################################################################################
# Development Settings
################################################################################

# Frontend development
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_HOST=localhost

# Testing
VITE_TEST_API_URL=http://localhost:8000
VITE_TEST_DATABASE_URL=postgresql://testuser:testpass@localhost:5432/testdb
